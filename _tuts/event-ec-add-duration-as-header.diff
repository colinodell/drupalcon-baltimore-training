 use Symfony\Component\EventDispatcher\EventSubscriberInterface;
+use Symfony\Component\HttpKernel\Event\FilterResponseEvent;
 
 class OldBayInitializerSubscriber implements EventSubscriberInterface {
+  private $startTime;
+
